{
  "compilerOptions": {
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": true,
    "types": ["node"],
    "target": "es2015",
    "module":"ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@PAGE/*": ["./src/pages/*"],
      "@COMPONTENT/*": ["./src/components/*"],
      "@/*": ["./src/*"],
      "@UTILS/*": ["./src/utils/*"],
      "@STORE/*": ["./src/store/*"]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.(cs|les||les|sas|scs|t)s$"
        }
      }
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
